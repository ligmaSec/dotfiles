    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ï‡¦ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰ƒ", "ï‰ƒ", "ï‰‚", "ï‰‚", "ï‰‚", "ï‰", "ï‰", "ï‰", "ï‰€ "]
