{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 46,
    "modules-left": ["custom/eww_panel","hyprland/workspaces","cpu","memory","disk"],
    "modules-center": ["clock"],
    "modules-right": ["custom/public_ip","pulseaudio","pulseaudio#microphone","tray", "custom/power"],

    "wlr/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "on-click": "activate",
        "persistent_workspaces": {
